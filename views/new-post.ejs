<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="grey lighten-4">
    <%- include("./partials/header.ejs") %>

    <div class="container">
    
      <div class="card" >
        <h3 class="center">Create New Post</h3>
        <p class="center">You are creating a post as: '<%= user.username %>'</p>
        <form method="POST" action="new-post"  class="card-content">
          <div class="input-field">
            <input type="text" id="postTitle" name="postTitle" required/>
            <label for="postTitle">Title</label>
          </div>
          <div class="input-field">
            <textarea id="postMessage" class="materialize-textarea" name="postMessage" required></textarea>
            <label for="postMessage">Message</label>
          </div>
          <div class="input-field center-align">
            <a href="/" class="btn grey">Cancel</a>
            <input type="submit" class="btn ">
          </div>
        </form>
      </div>
  </div>
  </body>
</html>
